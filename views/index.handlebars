<!DOCTYPE html>
    <html>
        <head>
            <title>Dashboard</title>
            <link rel="stylesheet" href="css/styles.css">
            <meta charset="utf-8">
            <!-- <script src="handlebars-v4.7.6.js"></script> -->
        </head>
        <body>
            <header>    
                <div class="menu-button">
                    <div class="menu-button-burger"></div>
                </div>
                <nav>
                    <div class="openMenu"></div>
                    <div class="menu-background">
                        <ul class="menu">
                            <li><a href="index">Dashboard</a></li>
                            <li><a href="addtask">Add Task</a></li>
                            <li><a href="friends">Friends</a></li>
                            <li><a href="settings">Settings</a></li>
                            <li><a href="about">About</a></li>
                            <div class="closeMenu"></div>
                        </ul>
                    </div>
                </nav>
                    <h1 class="app-name">RALI</h1>
            </header>
            <h2>Dashboard</h2>
            <div class="progress-bar">
                <img src="./images/progress-bar.png" alt="Progress Bar" class="bar-image">
            </div>
            <div class="task-list-container">
                <h1>Tasks</h1>
                {{#each tasks}}
                    <div class="task-list" id="{{id}}">
                        <div class="task-container">
                            <div class="task">{{name}}</div>
                            <div class="done-button">DONE</div>
                        </div>
                    </div>
                {{/each}}
                <script src="js/app.js"></script>
            </div>
        </body>
    </html>